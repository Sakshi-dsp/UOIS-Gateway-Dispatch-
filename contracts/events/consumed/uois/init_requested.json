{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dispatch.arch/schemas/events/consumed/uois/init_requested.json",
  "title": "INIT_REQUESTED Event (Consumed)",
  "description": "Owned by UOIS Gateway. Triggers quote validation and creation for /init flow.",
  "type": "object",
  "required": [
    "event_type",
    "event_id",
    "search_id",
    "origin_lat",
    "origin_lng",
    "destination_lat",
    "destination_lng",
    "traceparent",
    "timestamp"
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "INIT_REQUESTED",
      "description": "Event type discriminator"
    },
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier (UUID v4)"
    },
    "search_id": {
      "type": "string",
      "format": "uuid",
      "description": "Search session ID from original /search request"
    },
    "origin_lat": {
      "type": "number",
      "minimum": -90.0,
      "maximum": 90.0,
      "description": "Pickup location latitude"
    },
    "origin_lng": {
      "type": "number",
      "minimum": -180.0,
      "maximum": 180.0,
      "description": "Pickup location longitude"
    },
    "origin_address": {
      "type": "string",
      "description": "Pickup location address string"
    },
    "destination_lat": {
      "type": "number",
      "minimum": -90.0,
      "maximum": 90.0,
      "description": "Drop location latitude"
    },
    "destination_lng": {
      "type": "number",
      "minimum": -180.0,
      "maximum": 180.0,
      "description": "Drop location longitude"
    },
    "destination_address": {
      "type": "string",
      "description": "Drop location address string"
    },
    "package_info": {
      "type": "object",
      "description": "Package details for order",
      "properties": {
        "weight_kg": {
          "type": "number",
          "minimum": 0,
          "description": "Package weight in kilograms"
        },
        "dimensions": {
          "type": "object",
          "description": "Package dimensions",
          "properties": {
            "length_cm": { "type": "number", "minimum": 0 },
            "width_cm": { "type": "number", "minimum": 0 },
            "height_cm": { "type": "number", "minimum": 0 }
          }
        },
        "category": {
          "type": "string",
          "description": "Package category (FOOD, GROCERY, etc.)"
        }
      }
    },
    "client_id": {
      "type": "string",
      "format": "uuid",
      "description": "Client identifier for business rules"
    },
    "service_type": {
      "type": "string",
      "enum": ["ECOM", "STANDARD", "INSTANT"],
      "description": "Service type requested"
    },
    "traceparent": {
      "type": "string",
      "pattern": "^00-[0-9a-f]{32}-[0-9a-f]{16}-[0-9a-f]{2}$",
      "description": "W3C traceparent header for distributed tracing"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event publication timestamp in UTC"
    }
  },
  "additionalProperties": false
}