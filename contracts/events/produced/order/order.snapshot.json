{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dispatch.arch/schemas/events/produced/order/order.snapshot.json",
  "title": "Order Snapshot Event",
  "description": "Canonical order state snapshot for hydration and replay. Used by WebSocket Gateway and Admin Dashboard.",
  "type": "object",
  "required": [
    "event_type",
    "event_version",
    "event_id",
    "dispatch_order_id",
    "state",
    "quote_snapshot",
    "timestamps",
    "traceparent",
    "timestamp"
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "order.snapshot",
      "description": "Event type discriminator"
    },
    "event_version": {
      "type": "integer",
      "minimum": 1,
      "description": "Event schema version for evolution"
    },
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier for deduplication"
    },
    "dispatch_order_id": {
      "type": "string",
      "description": "Order identifier in human-readable format"
    },
    "client_order_id": {
      "type": "string",
      "description": "Client-facing order identifier (optional, included when available)"
    },
    "client_id": {
      "type": "string",
      "format": "uuid",
      "description": "Client identifier for billing context"
    },
    "rider_id": {
      "type": "string",
      "description": "Assigned rider identifier (if available)"
    },
    "state": {
      "type": "string",
      "enum": [
        "CREATED",
        "QUOTE_VALIDATED",
        "QUOTE_INVALID",
        "CONFIRMATION_PENDING",
        "CONFIRMED",
        "ASSIGNED",
        "SOFT_ARRIVED_AT_ORIGIN",
        "PICKED_UP",
        "SOFT_ARRIVED_AT_DESTINATION",
        "DELIVERED",
        "CANCELLED",
        "RTO_INITIATED",
        "RTO_DELIVERED",
        "COMPLETED",
        "EXPIRED"
      ],
      "description": "Current canonical order state"
    },
    "quote_snapshot": {
      "type": "object",
      "description": "Snapshot of validated quote data (opaque object, do not redefine quote schema)",
      "additionalProperties": true
    },
    "origin_location": {
      "type": "object",
      "properties": {
        "lat": { "type": "number" },
        "lng": { "type": "number" },
        "address": { "type": "string" }
      },
      "description": "Pickup location details"
    },
    "destination_location": {
      "type": "object",
      "properties": {
        "lat": { "type": "number" },
        "lng": { "type": "number" },
        "address": { "type": "string" }
      },
      "description": "Drop location details"
    },
    "package_info": {
      "type": "object",
      "properties": {
        "weight_kg": { "type": "number" }
      },
      "description": "Package details"
    },
    "timestamps": {
      "type": "object",
      "description": "All state transition timestamps",
      "properties": {
        "created_at": { "type": "string", "format": "date-time" },
        "quote_validated_at": { "type": "string", "format": "date-time" },
        "confirmation_requested_at": { "type": "string", "format": "date-time" },
        "confirmed_at": { "type": "string", "format": "date-time" },
        "assigned_at": { "type": "string", "format": "date-time" },
        "picked_up_at": { "type": "string", "format": "date-time" },
        "delivered_at": { "type": "string", "format": "date-time" },
        "cancelled_at": { "type": "string", "format": "date-time" },
        "rto_initiated_at": { "type": "string", "format": "date-time" },
        "rto_delivered_at": { "type": "string", "format": "date-time" },
        "completed_at": { "type": "string", "format": "date-time" },
        "expired_at": { "type": "string", "format": "date-time" }
      },
      "additionalProperties": false
    },
    "traceparent": {
      "type": "string",
      "pattern": "^00-[0-9a-f]{32}-[0-9a-f]{16}-[0-9a-f]{2}$",
      "description": "W3C traceparent header for distributed tracing"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event publication timestamp in UTC"
    }
  },
  "additionalProperties": false
}
