{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dispatch.arch/schemas/events/produced/order/order.cancelled.json",
  "title": "Order Cancelled Event",
  "description": "Rider-facing event published when order is cancelled",
  "type": "object",
  "required": [
    "event_type",
    "event_version",
    "event_id",
    "dispatch_order_id",
    "client_order_id",
    "reason",
    "source",
    "traceparent",
    "timestamp"
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "order.cancelled",
      "description": "Event type discriminator"
    },
    "event_version": {
      "type": "integer",
      "minimum": 1,
      "description": "Event schema version for evolution"
    },
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier for deduplication"
    },
    "dispatch_order_id": {
      "type": "string",
      "description": "Order identifier in human-readable format"
    },
    "rider_id": {
      "type": "string",
      "description": "Assigned rider identifier (if any)"
    },
    "client_order_id": {
      "type": "string",
      "description": "Client-facing order identifier"
    },
    "reason": {
      "type": "string",
      "description": "Human-readable cancellation reason"
    },
    "source": {
      "type": "string",
      "enum": [
        "CLIENT_REQUEST",
        "RIDER_REQUEST",
        "SYSTEM_TIMEOUT",
        "ADMIN_PANEL",
        "PAYMENT_FAILED"
      ],
      "description": "Source of cancellation"
    },
    "traceparent": {
      "type": "string",
      "pattern": "^00-[0-9a-f]{32}-[0-9a-f]{16}-[0-9a-f]{2}$",
      "description": "W3C traceparent header for distributed tracing"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event publication timestamp in UTC"
    }
  },
  "additionalProperties": false
}
