{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dispatch.arch/schemas/events/produced/order/order.rto_arrived_at_location.json",
  "title": "Order RTO Arrived at Location Event",
  "description": "Rider-facing event published when rider arrives at RTO location",
  "type": "object",
  "required": [
    "event_type",
    "event_version",
    "event_id",
    "dispatch_order_id",
    "rider_id",
    "client_order_id",
    "traceparent",
    "timestamp"
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "order.rto_arrived_at_location",
      "description": "Event type discriminator"
    },
    "event_version": {
      "type": "integer",
      "minimum": 1,
      "description": "Event schema version for evolution"
    },
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier for deduplication"
    },
    "dispatch_order_id": {
      "type": "string",
      "description": "Order identifier in human-readable format"
    },
    "rider_id": {
      "type": "string",
      "description": "Assigned rider identifier"
    },
    "client_order_id": {
      "type": "string",
      "description": "Client-facing order identifier"
    },
    "quote_id": {
      "type": "string",
      "format": "uuid",
      "description": "Associated quote ID"
    },
    "rto_location": {
      "type": "object",
      "properties": {
        "lat": {
          "type": "number",
          "description": "RTO location latitude"
        },
        "lng": {
          "type": "number",
          "description": "RTO location longitude"
        },
        "address": {
          "type": "string",
          "description": "RTO location address"
        }
      },
      "description": "RTO location details"
    },
    "traceparent": {
      "type": "string",
      "pattern": "^00-[0-9a-f]{32}-[0-9a-f]{16}-[0-9a-f]{2}$",
      "description": "W3C traceparent header for distributed tracing"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event publication timestamp in UTC"
    }
  },
  "additionalProperties": false
}
