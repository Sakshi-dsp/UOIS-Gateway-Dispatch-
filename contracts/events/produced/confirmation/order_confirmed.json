{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dispatch.arch/schemas/events/produced/confirmation/order_confirmed.json",
  "title": "Order Confirmed Event",
  "description": "Rider assignment success notification. Published to UOIS Gateway.",
  "type": "object",
  "required": [
    "event_type",
    "event_version",
    "event_id",
    "dispatch_order_id",
    "quote_id",
    "rider_id",
    "traceparent",
    "timestamp"
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "ORDER_CONFIRMED",
      "description": "Event type discriminator"
    },
    "event_version": {
      "type": "integer",
      "minimum": 1,
      "description": "Event schema version for evolution"
    },
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier for deduplication"
    },
    "dispatch_order_id": {
      "type": "string",
      "description": "Order identifier in human-readable format"
    },
    "quote_id": {
      "type": "string",
      "format": "uuid",
      "description": "Validated quote ID"
    },
    "rider_id": {
      "type": "string",
      "description": "Assigned rider identifier"
    },
    "assignment_id": {
      "type": "string",
      "format": "uuid",
      "description": "Assignment session identifier"
    },
    "traceparent": {
      "type": "string",
      "pattern": "^00-[0-9a-f]{32}-[0-9a-f]{16}-[0-9a-f]{2}$",
      "description": "W3C traceparent header for distributed tracing"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event publication timestamp in UTC"
    }
  },
  "additionalProperties": false
}
