{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dispatch.arch/schemas/events/produced/confirmation/order_confirmation_rejected.json",
  "title": "Order Confirmation Rejected Event",
  "description": "Order creation failed due to quote validation issues. Published to UOIS Gateway.",
  "type": "object",
  "required": [
    "event_type",
    "event_version",
    "event_id",
    "dispatch_order_id",
    "quote_id",
    "reason",
    "traceparent",
    "timestamp"
  ],
  "properties": {
    "event_type": {
      "type": "string",
      "const": "ORDER_CONFIRMATION_REJECTED",
      "description": "Event type discriminator"
    },
    "event_version": {
      "type": "integer",
      "minimum": 1,
      "description": "Event schema version for evolution"
    },
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier for deduplication"
    },
    "dispatch_order_id": {
      "type": "string",
      "description": "Order identifier in human-readable format"
    },
    "quote_id": {
      "type": "string",
      "format": "uuid",
      "description": "Quote ID that failed validation"
    },
    "reason": {
      "type": "string",
      "enum": ["QUOTE_EXPIRED", "QUOTE_INVALID", "VALIDATION_FAILED"],
      "description": "Reason for rejection"
    },
    "traceparent": {
      "type": "string",
      "pattern": "^00-[0-9a-f]{32}-[0-9a-f]{16}-[0-9a-f]{2}$",
      "description": "W3C traceparent header for distributed tracing"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event publication timestamp in UTC"
    }
  },
  "additionalProperties": false
}
